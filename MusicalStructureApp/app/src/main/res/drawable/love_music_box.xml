<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <bitmap
            android:src="@drawable/love_song"
            android:alpha="0.4">
        </bitmap>
    </item>

    <item>

        <shape
            android:shape="rectangle">
            <corners
                android:radius="10px" />
            <stroke
                android:width="10px"
                android:color="@color/emerald_green" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="10dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/light_blue"
                android:type="linear"/>

        </shape>
    </item>

</layer-list >